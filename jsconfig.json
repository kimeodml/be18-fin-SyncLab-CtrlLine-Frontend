{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "target": "es2024",
    "module": "esnext",
    "baseUrl": ".",
    "moduleResolution": "node",
    "paths": {
      "@/*": ["./src/*"]
    },
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"],
    "jsx": "preserve"
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules"]
}
